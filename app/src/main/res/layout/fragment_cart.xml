<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cart.CartFragment">

    <TextView
        android:id="@+id/tv_empty_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <View
            android:id="@+id/v_cart_bottom_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/material_dynamic_neutral95"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <CheckBox
            android:id="@+id/cb_selector_all"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/v_cart_bottom_bar"
            app:layout_constraintStart_toStartOf="@id/v_cart_bottom_bar"
            app:layout_constraintTop_toTopOf="@id/v_cart_bottom_bar" />

<!--        <TextView-->
<!--            android:id="@+id/tv_selector_all"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginVertical="8dp"-->
<!--            android:text="All"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="24dp"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/v_cart_bottom_bar"-->
<!--            app:layout_constraintStart_toEndOf="@id/cb_selector_all"-->
<!--            app:layout_constraintTop_toTopOf="@id/v_cart_bottom_bar" />-->

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Total: 0$"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/v_cart_bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/btn_checkout"
            app:layout_constraintTop_toTopOf="@id/v_cart_bottom_bar" />

        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="160dp"
            android:layout_height="76dp"
            android:text="Checkout"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:layout_margin="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/v_cart_bottom_bar"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>