<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/user_1"
        android:layout_width="50dp"
        android:background="@drawable/color_unselected"
        android:layout_height="50dp" android:id="@+id/imageReview" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content" android:id="@+id/userNameTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="88dp" app:layout_constraintTop_toTopOf="@+id/imageReview"
        app:layout_constraintBottom_toBottomOf="@+id/imageReview"/>
    <TextView
        android:text="TextView"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/reviewContentTxt"
        app:layout_constraintTop_toBottomOf="@+id/imageReview"
        app:layout_constraintStart_toStartOf="@+id/imageReview"/>
    <TextView
        android:text="4.0"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content" android:id="@+id/reviewRatingTxt"
        app:layout_constraintBottom_toBottomOf="@+id/userNameTxt"
        app:layout_constraintTop_toTopOf="@+id/userNameTxt"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
        android:src="@drawable/star"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/reviewRatingTxt"
        app:layout_constraintBottom_toBottomOf="@+id/userNameTxt" app:layout_constraintTop_toTopOf="@+id/userNameTxt"/>
</androidx.constraintlayout.widget.ConstraintLayout>