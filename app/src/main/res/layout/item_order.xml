<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="10dp">

    <View
        android:id="@+id/v_order"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/gray_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_product_order"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_notifications_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/v_order"
        app:layout_constraintEnd_toEndOf="@id/v_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_title_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Iphone 12"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/v_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="$0"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_product_title_order"
        app:layout_constraintEnd_toEndOf="@id/tv_product_title_order"
        app:layout_constraintTop_toBottomOf="@id/tv_product_title_order" />

    <TextView
        android:id="@+id/tv_total_price_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/v_order"
        app:layout_constraintEnd_toEndOf="@id/tv_product_title_order"
        app:layout_constraintStart_toStartOf="@id/tv_product_title_order" />

</androidx.constraintlayout.widget.ConstraintLayout>